<!DOCTYPE html>
<html>
  <head>
    <title>HackerNewsCloneRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    <% if @errors %>
      <div id='errors'>
        <ul class='errors'>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
